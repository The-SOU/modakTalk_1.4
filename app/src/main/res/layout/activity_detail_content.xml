<!--                android:id="@+id/detailcontent_tv_anonymity"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="5dp"-->
<!--                android:fontFamily="@font/spoqahansansneo_bold"-->
<!--                android:text="익명"-->
<!--                android:textColor="@color/whitegrey"-->
<!--                android:textSize="20sp" />-->
<!--        </LinearLayout>-->

        <EditText
            android:id="@+id/detailcontent_edittext_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/detailcontent_btn_commentupload"
            android:hint="댓글을 입력하세요."
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/detailcontent_btn_commentupload"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_pencil_green" />

        </LinearLayout>


    </RelativeLayout>

