<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_repeatboard_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/item_repeatboard_tv_boardname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:text="자유게시판"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img_newcontent"/>
        </LinearLayout>


</RelativeLayout>


<LinearLayout
android:id="@+id/item_boardcontent_layout"
android:layout_height="wrap_content"
android:layout_marginBottom="10dp"
android:layout_marginTop="5dp"
android:layout_width="wrap_content">

<TextView
    android:ellipsize="end"
    android:fontFamily="@font/spoqahansansneo_bold"
    android:id="@+id/item_repeatboard_tv_boardcontent"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:maxLines="1"
    android:text="나는 잘 지내고 있다. 너도 잘 지내니?"
    android:textColor="@color/whitegrey"
    android:textSize="20sp" />
</LinearLayout></LinearLayout>