<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation.administrator.UploadSlideActivity"
    android:orientation="vertical"
    android:id="@+id/layout">

    <EditText
        android:id="@+id/upload_slide_title"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="title"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/upload_slide_explain"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="explain"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/upload_slide_url"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="url"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="지역 선택"
        android:layout_below="@+id/selectregion_spinner"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqahansansneo_bold"
        />
    <Spinner
        android:id="@+id/upload_slide_region"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="타입 선택"
        android:layout_below="@+id/selectregion_spinner"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqahansansneo_bold"
        />
    <Spinner
        android:id="@+id/upload_slide_type"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"/>

    <Button
        android:id="@+id/upload_slide_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:text="Upload"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>